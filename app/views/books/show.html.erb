<!-- 共通レイアウト -->

<!-- books show-->
<h2>Book detail</h2>
<table>
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(@book.user.id) do %>
            <%= image_tag @book.user.get_profile_image(80, 80) %><br>
            <%= @book.user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(@book.id) do %>
            <%= @book.title %>
          <% end %>
        </td>
        <td>
          <%= @book.body %>
        </td>
        <td>
          <%= link_to 'Edit', edit_book_path(@book.id) %>
        </td>
        <td>
          <%= link_to 'Destroy', book_path(@book.id), method: :delete %>
        </td>
      </tr>
    </tbody>
</table>