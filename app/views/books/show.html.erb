<!-- 共通レイアウト -->

<!-- books show-->
<h2>Book detail</h2>
<table>
    <tbody>
      <tr>
        <td>
          <!--投稿してないのに写真が出現するのはなぜ？-->
          <%= image_tag @book.user.get_profile_image(80, 80) %>
        </td>
        <td>
          <%= @book.title %>
        </td>
        <td>
          <%= @book.body %>
        </td>
        <td>
          <%= link_to 'Edit', edit_book_path(@book.id) %>
        </td>
        <td>
          <%= link_to 'Destroy', book_path(@book.id), method: :delete %>
        </td>
      </tr>
    </tbody>
</table>