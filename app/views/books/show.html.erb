<p id="notice"><%= flash[:notice] %></p>
<div class="container px-5 px-sm-0">
  <!-- エラーメッセージ -->
  <div id="error_explanation">
    <% if @new_book.errors.any? %>
      <%= @new_book.errors.count %>errors prohibited this obj from being saved:
      <ul>
        <% @new_book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-3">
      <!-- user info & New book-->
      <%= render 'users/list', user: @user, book: @new_book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <!-- books show-->
      <h2>Book detail</h2>
      <table>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                  <%= image_tag @book.user.get_profile_image(80, 80) %><br>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book.id) do %>
                  <%= @book.title %>
                <% end %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <% if @book.user.id == current_user.id %>
                <td>
                  <%= link_to 'Edit', edit_book_path(@book.id) %>
                </td>
                <td>
                  <%= link_to 'Destroy', book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
                </td>
              <% end %>
            </tr>
          </tbody>
      </table>
    </div>
  </div>
</div>