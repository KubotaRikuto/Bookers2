<!-- user info & New book-->
<div> <!-- サイドバー-->
  <div>
    <h2>User info</h1>
    <div>
      <%= image_tag @user.get_profile_image(100, 100) %>
      <table>
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div>
        <%= link_to edit_user_path(@user.id) do %>
          <span>プロフィール編集</span>
        <% end %>
      </div>
    </div>
  </div>
  
  <div>
    <h2>New book</h2>
    <div>
        <% form_with model: @book do |f|%>
          <label for="book_title">Title</label>
          <%= f.text_field :title, class:"form-control" %>
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, class:"form-control" %>
          <%= f.submit 'Create Book' %>
        <% end %>
    </div>
  </div>
</div>
<!-- users show -->
<h2>Books</h2>
<table>
  <thead>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
  </thead>
  <% @books.each do |books|%>
    <tbody>
      <tr>
        <td>
          <%= image_tag user.get_profile_image(80, 80) %>
        </td>
        <td>
          <%= books.title %>
        </td>
        <td>
          <%= books.body %>
        </td>
      </tr>
    </tbody>
  <% end %>
</table>