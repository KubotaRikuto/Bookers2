
<!-- user info & New book-->
<%= render 'list', user: @user, book: @new_book %>

<!-- users show -->
<h2>Books</h2>
<table>
  <thead>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
  </thead>
  <% @books.each do |books|%>
    <tbody>
      <tr>
        <td>
          <%= image_tag books.user.get_profile_image(80, 80) %>
        </td>
        <td>
          <%= link_to book_path(books.id) do %>
            <%= books.title %>
          <% end %>
        </td>
        <td>
          <%= books.body %>
        </td>
      </tr>
    </tbody>
  <% end %>
</table>