<p id="notice"><%= flash[:notice] %></p>
<div class="container px-5 px-sm-0">
  <!-- エラーメッセージ -->
  <div id="error_explanation">
    <% if @new_book.errors.any? %>
      <%= @new_book.errors.count %>errors prohibited this obj from being saved:
      <ul>
        <% @new_book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-3">
      <!-- user info & New book-->
      <%= render 'list', user: @user, book: @new_book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <!-- users show -->
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </thead>
        <% @books.each do |books|%>
          <tbody>
            <tr>
              <td>
                <%= image_tag books.user.get_profile_image(80, 80) %>
              </td>
              <td>
                <%= link_to book_path(books.id) do %>
                  <%= books.title %>
                <% end %>
              </td>
              <td>
                <%= books.body %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>